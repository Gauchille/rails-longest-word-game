<h1>New Game</h1>
<ul class="word">
<% @grid.each do |letter| %>
  <li class="letter"><%= letter %></li>
<% end %>
</ul>
<form action="/score" class="form-block" data-turbo="false" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%=  hidden_field_tag 'grid', @grid %>
  <label for="text">What's your best shot ?</label>
  <input type="text" name="attempt" placeholder="your attempt">
  <input type="submit" class="submit">
</form>
